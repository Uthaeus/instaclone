<div class="text-center">
  <%= image_tag @post.image.url(:medium) %>
</div>

<div class="form-wrapper">
  
  <div>
    <%= render 'form', post: @post %>
  </div>

</div>

<div class="text-center">
  <%= link_to "Delete", @post, method: :delete, data: { confirm: 'Are you sure?' } %> |
  <%= link_to "Cancel", posts_path %>
</div>